# Test Environment Configuration Template
# Copy this to .env.test and modify as needed

# Test Server Configuration
TEST_BASE_URL=http://localhost:7401
TEST_TIMEOUT=10000
TEST_RETRIES=1
TEST_DELAY_BETWEEN_TESTS=100
TEST_DELAY_BETWEEN_SUITES=500

# Test Results
TEST_EXPORT_RESULTS=true
TEST_EXPORT_FORMAT=json

# Logging
TEST_LOG_LEVEL=info

# Authentication (enable when testing protected endpoints)
TEST_AUTH_ENABLED=false
TEST_AUTH_TOKEN=your_jwt_token_here
TEST_API_KEY=your_api_key_here
TEST_ORGANIZATION_ID=your_organization_id_here

# Performance Testing
TEST_PERFORMANCE_ENABLED=false
TEST_PERFORMANCE_ITERATIONS=5
TEST_PERFORMANCE_THRESHOLD=1000

# Example usage:
# 1. Copy this file to .env.test
# 2. Update the values as needed
# 3. Run tests: npm run test:api:all 